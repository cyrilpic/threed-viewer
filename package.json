{
  "name": "threed-viewer",
  "version": "1.0.0",
  "description": "3D web viewer based on Three.js with orthographic camera. Developed to display mechanical parts.",
  "main": "dist/threed-viewer.js",
  "mainMin": "dist/threed-viewer.min.js",
  "module": "dist/threed-viewer.esm.js",
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c -w",
    "dev": "concurrently \"npm:build:dev\" \"npm:serve\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "./node_modules/.bin/eslint \"src/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "serve": "npm run build && ./node_modules/.bin/http-server -c-1 -o /demo/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyrilpic/threed-viewer.git"
  },
  "author": "Cyril Picard",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/cyrilpic/threed-viewer/issues"
  },
  "homepage": "https://github.com/cyrilpic/threed-viewer#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "concurrently": "^6.4.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "http-server": "^14.0.0",
    "rollup": "^2.60.1",
    "rollup-plugin-terser": "^7.0.2",
    "three": "^0.135.0"
  }
}
